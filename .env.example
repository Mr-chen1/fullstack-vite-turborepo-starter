# ========================================
# Infrastructure Configuration
# Used by docker-compose.yml only
# ========================================

# PostgreSQL
POSTGRES_PORT=5432
POSTGRES_DB=nest_boilerplate
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_TIMEZONE=UTC

# Redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_pass

# Backend (Prisma) - constructed from Postgres vars above
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nest_boilerplate
REDIS_URL=redis://:redis_pass@127.0.0.1:6379

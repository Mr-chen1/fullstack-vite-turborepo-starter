{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "db:generate": {
      "cache": false,
      "outputs": ["node_modules/.prisma/client/**"]
    },
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "format": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start:dev": {
      "cache": false,
      "persistent": true
    },
    "start:prod": {
      "cache": false,
      "persistent": true
    },
    "test:unit": {
      "dependsOn": ["^build", "^test:unit"]
    },
    "test:unit:cov": {
      "dependsOn": ["^build", "^test:unit:cov"]
    },
    "test:e2e": {
      "dependsOn": ["^build", "^test:e2e"]
    }
  }
}
